<section id="block-{{ block.id }}" class="align{{ block.align }} block {{ block.className }} testimonial-1 slider">
    <div class="swiper-container overflow-hidden has-{{ fields.text_color }}-color" id="slider-{{ block.id }}">
        <div class="swiper-wrapper">
            {% for testimonial in fields.testimonial %}
                <div class="swiper-slide testimonial">
                    <div class="row justify-content-center align-items-center reference">
                        <div class="col-lg-4 testimonial-picture text-center">
                            {% include 'images/image.twig' with {image: testimonial.picture} %}
                        </div>
                        <div class="col-lg-8 testimonial-content">
                            <p class="testimonial-text">{{ testimonial.text }}</p>
                            <p class="testimonial-person">
                                <span class="name">{{ testimonial.name }}</span>
                                <span class="title">{{ testimonial.title }}</span>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <!-- Add Arrows -->
        <div class="swiper-button swiper-button-next has-{{ fields.button_arrow_color }}-color has-{{ fields.button_color }}-background-color">
            <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-right"
                 class="svg-inline--fa fa-chevron-right fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 320 512">
                <path fill="currentColor"
                      d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"></path>
            </svg>
        </div>
        <div class="swiper-button swiper-button-prev has-{{ fields.button_arrow_color }}-color has-{{ fields.button_color }}-background-color">
            <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left"
                 class="svg-inline--fa fa-chevron-left fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 320 512">
                <path fill="currentColor"
                      d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path>
            </svg>
        </div>
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>

    {% if fields.testimonial|length > 1 %}
        <script>
        window.addEventListener('DOMContentLoaded', () => {
            new Swiper('#slider-{{ block.id }}', {
                // Optional parameters
                direction: 'horizontal',
                speed: 1000,
                loop: true,
                autoHeight: true,
                keyboard: {
                    enabled: true,
                },
                autoplay: {
                    delay: 5000,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
            })
        });
    </script>
    {% endif %}

</section>
